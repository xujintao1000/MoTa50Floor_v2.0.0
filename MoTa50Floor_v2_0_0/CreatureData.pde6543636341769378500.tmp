class Creature{
    int index, hp, atk, def, gold;

    Creature(int index, int hp, int atk, int def, int gold){
        this.hp = hp;
        this.atk = atk;
        this.def = def;
        this.gold = gold;
        this.index = index;
    }
    
    boolean Combat(Creature opponent){
        hp -= Math.max(opponent.atk-def,1);
        return hp>0;   // return true if hp still have hp
    }
}


